    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crdViewContactNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:strokeColor="@null"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_contact_phone_24"
                app:tint="@color/blue" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="30dp">

                <TextView
                    android:id="@+id/txtOderContactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+63 09171234567"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppinsbold"/>

                <TextView
                    android:id="@+id/txtOrderContactNumberSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Contact Number"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:alpha="0.5"
                    android:fontFamily="@font/poppinsbold"/>

            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_chevron_right_24" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crdViewCashOrWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@null"
        tools:layout_editor_absoluteY="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crdViewContactNumber"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_account_balance_wallet_24"
                app:tint="@color/blue" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="30dp">

                <TextView
                    android:id="@+id/txtCashOrWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppinsbold"/>

                <TextView
                    android:id="@+id/txtCashOrWalletSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid by sender"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:alpha="0.5"
                    android:fontFamily="@font/poppinsbold"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_chevron_right_24" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crdViewCoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
